        echo "Soma";
        function Soma($n1, $n2){
            $valor  = $n1 + $n2;
            return $valor;
        }

        echo "<br>"; 
        $valor =  Soma(11, 21);
        echo "O valor da soma é " . $valor;

        echo "<hr>";


        echo "Subtração";
        function Subtracao($n3, $n4){
            $valor  = $n3 - $n4;
            return $valor;
        }

        echo "<br>"; 
        $valor =  Subtracao(21, 11);
        echo "O valor da subtração é " . $valor;

        echo "<hr>";


        echo "Divisão";
        function Divisao($n5, $n6){
            $valor  = $n5 / $n6;
            return $valor;
        }

        echo "<br>"; 
        $valor =  Divisao(22, 11);
        echo "O valor da divisão é " . $valor;

        echo "<hr>";


        echo "Multiplicação";
        function Multiplicacao($n7, $n8){
            $valor  = $n7 * $n8;
            return $valor;
        }

        echo "<br>"; 
        $valor =  Multiplicacao(22, 111);
        echo "O valor da multiplicação é " . $valor;



    ?>
